page {
    height: 100%;
}

.songsheetlist .header {
    position: relative;
    width: 100%;
    height: 300rpx;
}

.songsheetlist .header image {
    width: 100%;
    height: 100%;
}

.songsheetlist .header .date {
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -140rpx;
    margin-top: -30rpx;
    width: 300rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
}

.header .date .day {
    font-size: 38rpx;
}

/* 列表区域 */
.ListContainer {
    position: relative;
    top: -20rpx;
    padding: 0 20rpx;
    border-radius: 30rpx;
    background: #fff;
}

.listHeader {
    height: 80rpx;
    line-height: 80rpx;
}

.listHeader .changeMore {
    float: right;
    width: 50rpx;
    height: 50rpx;
    margin: 10rpx;
}

/* 内容区 */
.listScroll {
    height: calc(100vh - 380rpx);
  }
  .scrollItem {
    position: relative;
    display: flex;
    margin-bottom: 20rpx;
    /* background-color: yellow; */
  }
  .scrollItem image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
  }
  
  .musicInfo {
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
  
  }
  
  .musicInfo text {
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    max-width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .scrollItem .iconfontb{
    position: absolute;
    width: 50rpx;
    height: 50rpx;
    line-height: 80rpx;
    right: 11%;
    text-align: right;
    margin: 15rpx 0;
  }

  .scrollItem .iconfont {
    position: absolute;
    right: 2%;
    width: 40rpx;
    height: 40rpx;
    line-height: 80rpx;
    text-align: right;
    margin: 20rpx 0;
  }
