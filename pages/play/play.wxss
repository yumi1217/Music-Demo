.timebox {
    width: 90%;
    height: 50rpx;
    margin: 0 auto;
    position: absolute;
    /* background-color: yellow; */
    left: 5%;
    bottom: 13%;
}

.timebox view {
    display: block;
    float: left;
    text-align: center;
}

.timebox .play_time {
    width: 20%;
    color: white;
}

.timebox .end_time {
    width: 20%;
    color: white;
}

.timebox slider {
    width: 60%;
    float: left;
    display: block;
    margin: 0;
}