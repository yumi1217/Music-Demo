/* pages/play/play.wxss */
page {
    background-color: black;
}

.bgimg {
    position: absolute;
    width: 180%;
    height: 100%;
    left: -70%;
    opacity: 0.5;
}

.musicname {
    position: relative;
    text-align: center;
    color: white;
    font-size: 50rpx;
    height: 100rpx;
    line-height: 100rpx;
}

.musicsinger {
    position: relative;
    text-align: center;
    color: white;
    font-size: 30rpx;
    height: 50rpx;
    line-height: 0rpx;
}

.playbox {
    width: 90%;
    height: 800rpx;
    /* background-color: pink; */
    position: relative;
    margin: 0 auto;
}

.playbox swiper-item {
    width: 100%;
    height: 100%;
}

.imgbox image {
    width: 300rpx;
    height: 300rpx;
    border-radius: 50%;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    margin: auto;
    border: 100rpx solid #333333;
    box-shadow: 3px 3px 10rpx black;
    animation: imgmove 20s infinite linear;
}

.imgbox .imgpause {
    animation-play-state: paused;
}

@keyframes imgmove {
    from {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }
}

/* 歌词 */
.lrcbox view {
    text-align: center;
    color: rgb(172, 172, 172);
    font-size: 35rpx;
    line-height: 60rpx;
}

/* 歌词高亮显示 */
.playbox .lrcbox .color {
    color: #00FA9A;
    font-size: 42rpx;
}

.lrcbox scroll-view {
    width: 100%;
    height: 100%;
}

/* 底部按钮 */

.btnbox {
    width: 100%;
    height: 10%;
    background-color: #00FA9A;
    position: absolute;
    bottom: 0;
    display: flex;
}

